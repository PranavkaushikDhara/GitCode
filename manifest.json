{
    "manifest_version": 3,
    "name": "LeetCode GitHub Committer",
    "version": "1.0",
    "description": "Automatically commit LeetCode solutions to GitHub repositories",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://api.github.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "LeetCode GitHub Committer"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }